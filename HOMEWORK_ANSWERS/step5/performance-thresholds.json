  "reporting": {
    "scoreCalculation": {
      "weights": {
        "coreWebVitals": 0.4,
        "loadingMetrics": 0.3,
        "resourceMetrics": 0.2,
        "userExperience": 0.1
      },
      "gradeThresholds": {
        "A": { "min": 90, "max": 100 },
        "B": { "min": 80, "max": 89 },
        "C": { "min": 70, "max": 79 },
        "D": { "min": 60, "max": 69 },
        "F": { "min": 0, "max": 59 }
      }
    },
    "exportOptions": {
      "includeHistoricalData": true,
      "comparisonPeriod": "30_days",
      "trendAnalysis": true,
      "recommendations": true
    }
  }
