  "userExperienceMetrics": {
    "rageClicks": {
      "threshold": 3,
      "timeWindow": 1000,
      "description": "Number of rapid clicks indicating user frustration"
    },
    "deadClicks": {
      "threshold": 5,
      "description": "Clicks on non-interactive elements"
    },
    "excessiveScrolling": {
      "threshold": 5000,
      "description": "Total scroll distance indicating content issues"
    },
    "formAbandonment": {
      "threshold": 0.3,
      "description": "Percentage of forms started but not completed"
    },
    "taskCompletionTime": {
      "good": 120,
      "needsImprovement": 300,
      "poor": 600,
      "unit": "seconds",
      "description": "Time to complete primary tasks"
    }
