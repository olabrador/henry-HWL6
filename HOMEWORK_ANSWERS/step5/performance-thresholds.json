  "alertingRules": {
    "critical": {
      "conditions": [
        "largestContentfulPaint > 6000",
        "firstInputDelay > 500",
        "cumulativeLayoutShift > 0.5"
      ],
      "severity": "critical",
      "message": "Critical performance degradation detected"
    },
    "warning": {
      "conditions": [
        "largestContentfulPaint > 4000",
        "firstInputDelay > 300",
        "timeToInteractive > 5500"
      ],
      "severity": "warning",
      "message": "Performance issues detected"
    },
    "info": {
      "conditions": ["totalTransferSize > 4096000", "totalRequests > 75"],
      "severity": "info",
      "message": "Resource usage above optimal levels"
    }
  },

  "budgetOverrides": {
    "marketingPages": {
      "description": "Higher thresholds for marketing-heavy pages",
      "adjustments": {
        "totalTransferSize": {
          "good": 3072000,
